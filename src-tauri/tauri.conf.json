{
  "build": {
    "beforeDevCommand": "pnpm start:web",
    "beforeBuildCommand": "pnpm build:web",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/memories-calendar/browser"
  },
  "package": {
    "productName": "Memories Calendar",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": false,
        "copyFile": false,
        "createDir": false,
        "exists": false,
        "readDir": false,
        "readFile": false,
        "removeDir": false,
        "removeFile": false,
        "renameFile": false,
        "scope": [],
        "writeFile": false
      }
    },
    "windows": [
      {
        "title": "Memories Calendar",
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "publisher": "Diana Kozachenko",
      "shortDescription": "Calendar for memories",
      "longDescription": "Calendar for showing memories on specific dates. Shows gallery with files",
      "targets": "all",
      "identifier": "com.tauri.memories-calendar",
      "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
      "category": "Utility"
    }
  }
}
